<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/user_main_information"
        android:minHeight="190dp"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:layout_alignTop="@+id/user_profile_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp" />

        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/full_name"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/user_profile_promotion_and_speciality" />

        <TextView
            android:id="@+id/user_profile_promotion_and_speciality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/promotion_speciality"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginStart="23dp"
            android:layout_below="@+id/user_profile_name"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</ScrollView>
