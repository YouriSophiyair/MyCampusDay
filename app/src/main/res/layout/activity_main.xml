<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Welcome_Page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ysoph.mycampusday.MainActivity"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_campus_day"
        android:id="@+id/WelcomeText1"
        android:gravity="center_horizontal"
        android:freezesText="false"
        android:textSize="30sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:textColor="#3b5998"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/organised_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WelcomeText2"
        android:textSize="30sp"
        android:textColor="#3b5998"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/WelcomeText1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/and"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WelcomeText3"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="#3b5998"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/logopiste"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logoefreigroupefr"
        android:id="@+id/logoefrei"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_width="wrap_content"
        android:cropToPadding="false"
        android:maxHeight="60dp"
        android:layout_below="@+id/WelcomeText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:contentDescription="logoefrei" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/next_button"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        tools:ignore="HardcodedText"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logopiste"
        android:id="@+id/logopiste"
        android:maxHeight="60dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginTop="56dp"
        android:contentDescription="logopiste"
        android:layout_below="@+id/WelcomeText2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
